<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.ifmo.ctddev.application" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameListActivity" />
        <activity android:name=".games.WebViewGameActivity" />
        <activity android:name=".games.MafiaActivity" >
        </activity>
        <activity
            android:name=".games.MafiaRulesActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_mafia_rules"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity android:name=".games.MafiaGameActivity" >
        </activity>
        <activity android:name=".games.bottleActivity" >
        </activity>
    </application>

</manifest>
